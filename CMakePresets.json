{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 24,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "default",
      "displayName": "Default config",
      "description": "Default build using Ninja generator",
      "binaryDir": "${sourceDir}/build-${presetName}",
      "hidden": true,
      "generator": "Ninja"
    },
    {
      "name": "win-deb-cl",
      "inherits": [
        "default"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_COMPILER": "cl"
      },
      "vendor": {
        "jetbrains.com/clion": {
          "toolchain": "MSVC"
        }
      }
    },
    {
      "name": "win-deb-clang",
      "inherits": [
        "default"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_COMPILER": "clang-cl"
      },
      "vendor": {
        "jetbrains.com/clion": {
          "toolchain": "CLANG"
        }
      }
    },
    {
      "name": "linux-deb-clang",
      "inherits": [
        "default"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_COMPILER": "clang++"
      },
      "vendor": {
        "jetbrains.com/clion": {
          "toolchain": "CLANG"
        }
      }
    },
    {
      "name": "linux-deb-gcc",
      "inherits": [
        "default"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_COMPILER": "g++"
      },
      "vendor": {
        "jetbrains.com/clion": {
          "toolchain": "GCC"
        }
      }
    }
  ]
}