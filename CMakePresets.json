{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 24,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "default",
      "displayName": "Default config",
      "description": "Default build using Ninja generator",
      "binaryDir": "${sourceDir}/build-${presetName}",
      "hidden": true,
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "$penv{VCPKG_TOOLCHAIN}"
      }
    },
    {
      "name": "debug-visual_studio",
      "displayName": "Debug-VS",
      "description": "Debug build with Visual Studio",
      "inherits": [
        "default"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_C_COMPILER": "cl",
        "CMAKE_CXX_COMPILER": "cl"
      },
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "toolset": {
        "value": "v143,host=x64",
        "strategy": "external"
      },
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "hostOS": [
            "Windows"
          ]
        }
      }
    },
    {
      "name": "debug-clang",
      "displayName": "Debug-Clang",
      "description": "Debug build with Clang/LLVM",
      "inherits": [
        "default"
      ],
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "clang++.exe",
        "CMAKE_RC_COMPILER": "llvm-rc.exe",
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "release-clang",
      "displayName": "Release-Clang",
      "description": "Release build with Clang/LLVM",
      "inherits": [
        "default"
      ],
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "clang++.exe",
        "CMAKE_RC_COMPILER": "llvm-rc.exe",
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ]
}